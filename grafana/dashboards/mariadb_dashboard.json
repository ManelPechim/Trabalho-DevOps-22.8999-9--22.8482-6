        {
          "expr": "up",
          "legendFormat": "Node {{instance}}",
          "refId": "A"
        }
      ],
      "xaxis": {
        "show": true
      },
      "yaxes": [
        {
          "format": "short",
          "show": true
        },
        {
          "show": true
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "points": false,
      "pointradius": 2
    },
    {
